<section class="grid grid-cols-2">
  <div
    class="
      flex flex-col
      justify-center
      bg-red
      text-white
      p-4
      lg:px-12
    "
  >
    <div class="flex flex-col items-start js-today">
      <h2 class="text-2xl font-bold mb-6 lg:text-3xl">
        {{ site.today.title }}
      </h2>

      <p class="mb-16">{{ site.today.intro }} {{ globals.today }}.</p>

      <a
        href="/{{ locale }}/classic/{{ globals.today }}"
        class="bg-white text-red px-4 py-3 rounded-md"
      >
        {{ site.today.cta }}
      </a>
    </div>
  </div>

  <div>
      {% blockImage site.today.image, "reader", "(min-width: 30em) ", "object-cover h-full w-full" %}
  </div>
</section>
