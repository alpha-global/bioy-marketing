---
layout: page
pagination:
  data: globals.locales
  size: 1
  alias: locale
permalink: "{{ locale }}/help/index.html"
activePage: help
---

<main class="mx-auto py-2 sm:py-4 lg:container">
  <h1 class="text-4xl lg:text-6xl font-bold">{{ lang.title }}</h1>

  {% if lang.intro %}
    <div class="prose">
      {{ lang.intro|markdown|safe }}
    </div>
  {% endif %}
</main>

<div class="mx-auto py-2 sm:py-4 lg:container" x-data="help()" x-init="init()">

  <div class="js-filter hidden flex relative mb-4">
    <span class="py-2 pr-2 font-bold absolute left-0 pointer">{{ lang.filter }}:</span>
    <input type="text" class="searchField__input appearance-none w-full p-2 pl-16 border-b-2 border-grey focus:outline-none focus:border-red" placeholder="{{ lang.filterHint }}" x-model="query" />
    {% svgSprite name="search", class="pointer-events-none absolute right-2 top-2 h-6 w-6" %}
  </div>

  <div class="grid gap-4 md:grid-cols-2 mb-4">
  {% for helpItem in collections.helpItems %}
    {% if helpItem.locale == locale %}
      <div class="border border-grey p-8 js-helpItem">
        <div class="font-bold inline-block text-gray-600 uppercase">
          {{ lang.categories[helpItem.category] }}
        </div>
        <h1 class="font-bold text-red">{{helpItem.title}}</h1>
        <p class="my-2">{{helpItem.shortAnswer}}</p>
        {% if helpItem.detailedAnswer %}
          <a href="/{{ locale }}/help/{{ helpItem.slug }}" class="underline">
            {{ lang.seeMore }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  {% endfor %}
  </div>

  <div x-show="!!query">
    <div x-show="filteredItems() == 0" class="border border-grey mb-4 p-8 flex flex-col items-center">
      <h1 class="font-bold text-center" x-text="`{{lang.notFoundMessage}} '${query}'`"></h1>
      <button class="border border-red text-red mt-4 px-2 py-4 rounded">
        {{ lang.submitButton }}
      </button>
    </div>
  </div>
</div>
