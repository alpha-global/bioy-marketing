---
layout: default
pagination:
  data: globals.locales
  size: 1
  alias: locale
permalink: "{{ locale }}/index.html"
---

<div x-data="homepage()"" x-init="init()">
  <header class="py-8">
    <h1 class="text-4xl font-bold">Start everyday in the Bible</h1>
    <h2 class="text-xl font-normal">
      {{ lang.intro | markdown | safe }}
    </h2>
  </header>

  <section>
    <div class="">

      <div class="absolute">
        {% for medium in lang.distribution %}
        <div class="w-screen h-mediablock" x-show="mediaFocus === {{loop.index0}}">

          <div class="absolute bg-red w-full h-mediablock"></div>

          <div class="absolute">
            {% if medium.image %} {% blockImage "./src" + medium.image ,
            "reader", "(min-width: 1vw)", "object-cover h-full w-full
            opacity-10" %} {% endif %}
          </div>

          <div class="absolute text-white pl-28 pr-4 py-6 md:px-16">
            <h4 class="text-xl font-bold mb-3">{{ medium.channel }}</h4>
            {{ medium.description | markdown | safe }}
          </div>
        </div>
        {% endfor %}
      </div>

      <div class="hidden flex flex-col absolute w-24 h-mediablock fill-current text-red" x-ref="mediaNav">
        <button class="flex-1 flex flex-col items-center justify-center" :class="mediaClass(0)" @click="mediaFocus = 0">
          {% svgSprite name="medium_app", class="h-10 w-10" %}
          <div>{{lang.distribution[0].channel}}</div>
        </button>
        <button class="flex-1 flex flex-col items-center justify-center" :class="mediaClass(1)" @click="mediaFocus = 1">
          {% svgSprite name="medium_email", class="h-10 w-10" %}
          <div>{{lang.distribution[1].channel}}</div>
        </button>
        <button class="flex-1 flex flex-col items-center justify-center" :class="mediaClass(2)" @click="mediaFocus = 2">
          {% svgSprite name="medium_podcast", class="h-10 w-10" %}
          <div>{{lang.distribution[2].channel}}</div>
        </button>
        <button class="flex-1 flex flex-col items-center justify-center" :class="mediaClass(3)" @click="mediaFocus = 3">
          {% svgSprite name="medium_website", class="h-10 w-10" %}
          <div>{{lang.distribution[3].channel}}</div>
        </button>
      </div>
    </div>
  </section>

  <section class="mb-64">
    <h2>Next</h2>
  </section>

  {% include 'partials/cta.njk' %}

  <section
    class="
      p-4
      flex flex-col
      text-center
      sm:text-left
      sm:px-0
      sm:grid sm:grid-cols-2
      sm:gap-4
      lg:py-8
    "
  >
    <h2
      class="
        font-bold
        lg:col-span-1
        mb-4
        sm:self-end
        sm:col-span-2
        sm:mb-0
        sm:px-4
        text-2xl
        lg:text-3xl
        lg:max-w-md
        lg:justify-self-end
      "
    >
      {{ lang.about.header }}
    </h2>

    <main
      class="mx-auto sm:px-4 sm:mx-0 lg:order-1 max-w-md lg:justify-self-end"
    >
      <p class="mb-4">
        {{ lang.about.intro }}
      </p>

      <blockquote class="standoutQuote my-4">
        {{ lang.about.quote }}
      </blockquote>

      <p class="my-4">
        {{ lang.about.outro }}
      </p>

      {% if lang.about.cta %}
      <p>
        <a
          class="
            inline-block
            border border-red
            rounded
            p-2
            pb-1.5
            text-red
            hover:bg-red-dark
            hover:border-red-dark
            hover:text-white
            transition-colors
          "
          href="{{ lang.about.cta.url }}"
        >
          {{ lang.about.cta.label }}
        </a>
      </p>
      {% endif %}
    </main>

    <aside class="mb-4 order-first sm:order-none lg:row-span-2">
      <div class="mx-auto w-2/3 sm:mx-auto sm:w-full">
        {% blockImage "./src" + lang.about.img , "Nicky and Pippa Gumbel",
        "(min-width: 30em) ", "rounded-full sm:rounded-none u-NandPclipper" %}

        <svg height="0" width="0">
          <defs>
            <clipPath id="NandPclipper" clipPathUnits="objectBoundingBox">
              <path
                d="M0.6489625025,0 C0.7858429025,0 0.909849895,0.05523222 1,0.1446695525 L1,0.8553304475 C0.909849895,0.94476778 0.7858429025,1 0.6489625025,1 C0.3733931225,1 0.15,0.776142375 0.15,0.5 C0.15,0.223857625 0.3733931225,0 0.6489625025,0 Z"
              ></path>
            </clipPath>
          </defs>
        </svg>
      </div>
    </aside>
  </section>

  {% include 'partials/today.njk' %}
</div>
