{
  "name": "bnap-marketing-site",
  "version": "0.0.1",
  "description": "Marketing site for The Bible with Nicky and Pippa Gumbel",
  "scripts": {
    "11ty": "ELEVENTY_ENV=development npx @11ty/eleventy --serve",
    "watch": "mix watch",
    "dev": "ELEVENTY_ENV=development npx @11ty/eleventy --serve & mix watch",
    "dev:cleanSlate": "npm run wipe && ELEVENTY_ENV=development CLEAN_SLATE=true npx @11ty/eleventy",
    "cms": "npx netlify-cms-proxy-server",
    "wipe": "rm -rf ./.cache && rm -rf ./build",
    "production": "ELEVENTY_ENV=production npx @11ty/eleventy && mix --production",
    "production:cleanSlate": "NODE_OPTIONS='--max-old-space-size=8192' ELEVENTY_ENV=production CLEAN_SLATE=true npx @11ty/eleventy && mix --production",
    "test": "npx playwright test"
  },
  "author": "Alpha International / OneSheep",
  "license": "ISC",
  "dependencies": {
    "alpinejs": "^3.13.5",
    "swipejs": "^2.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-img": "^3.1.0",
    "@ayctor/laravel-mix-svg-sprite": "^1.0.0",
    "@playwright/test": "^1.41.2",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.17",
    "dayjs": "^1.11.10",
    "laravel-mix": "^6.0.49",
    "marked": "^12.0.0",
    "netlify-plugin-cache": "^1.0.3",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "slugify": "^1.5.3",
    "svg-spritemap-webpack-plugin": "^4.5.0",
    "tailwindcss": "^3.4.1"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "htmlWhitespaceSensitivity": "css",
    "singleQuote": true,
    "printWidth": 90,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
