<div class="mb-4 py-6 w-full">
  <div
    id="slider"
    class="
      relative
      overflow-hidden
      w-4/5
      mx-auto
      border-t-4 border-b-4 border-red
      invisible
      py-6
      md:max-w-sm
    "
  >
    <div class="relative overflow-hidden">
      {% for item in site.testimonials %}
      <div class="relative float-left w-full overflow-hidden text-center">
        <p class="font-bold text-xl mb-3">
          {{ item.quote }}
        </p>
        <div class="text-lg">
          {{ item.source }}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
