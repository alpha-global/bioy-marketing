<section class="grid grid-cols-2">
  <div class="flex flex-col justify-center bg-red text-white p-4 lg:px-12">
    <div
      class="flex flex-col items-start lg:max-w-md self-end w-full js-today"
      data-locale="{{ locale }}"
      data-variant="{{ variant }}"
    >
      <h2 class="text-2xl font-bold mb-6 lg:text-3xl">
        {{ site.today.title }}
      </h2>

      <p class="mb-16">{{ site.today.intro }} {{ globals.today }}.</p>

      <a
        href="/{{ locale }}/classic/{{ globals.today }}"
        class="whiteButton px-4"
      >
        {{ site.today.cta }}
      </a>
    </div>
  </div>

  <div>
    {% blockImage site.today.image, "reader", "(min-width: 30em) ",
    "object-cover h-full w-full" %}
  </div>
</section>
