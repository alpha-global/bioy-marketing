<section x-data="app.audioPlayerModel" class="bg-grey-light pt-[34px] rounded-lg">

    <div class="grid grid-cols-3 font-semibold px-[34px]">
        <p>1x</p>
    </div>
    <div class="px-[34px] w-full">
        <input class="rounded-lg overflow-hidden appearance-none bg-red h-3 w-128 w-full" type="range" max="100" value="0" >
    </div>
    <div class="flex justify-between items-center font-semibold px-[34px]">
        <span x-text="progressTime"></span>
        <span x-text="totalTime"></span>
    </div>
    <div>
        <audio x-ref="audio" preload="metadata">
            <source src="{{audio.url}}" type="audio/mpeg">
            <p>Your browser doesn't support HTML5 audio. Here is a <a href="{{audio.url}}">link to the audio</a> instead.</p>
        </audio>
        <div class="grid grid-cols-5 space-x-2">
            <button class="flex" @click="skipBack()">
                {% svgSprite name="skip-back", class="h-10 w-auto" %}
            </button>
            <button class="flex"  @click="speedBack()">
                {% svgSprite name="speed-back", class="h-10 w-auto" %}
            </button>
            <button class="flex" @click="player()">
                <template x-if="!isPlaying">
                    {% svgSprite name="play", class="h-10 w-auto" %}
                </template>
                <template x-if="isPlaying">
                    {% svgSprite name="pause", class="h-10 w-auto" %}
                </template>
            </button>
            <button class="flex"  @click="speedForwards()">
                {% svgSprite name="speed-forwards", class="h-10 w-auto" %}
            </button>
            <button class="flex" @click="skipForwards()">
                {% svgSprite name="skip-forwards", class="h-10 w-auto" %}
            </button>
        </div>
    </div>
</section>