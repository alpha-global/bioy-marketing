<section class="container mx-auto prose prose-lg">
  <h1>{{ lang.title }}</h1>
  {% if lang.intro %}{{ lang.intro|markdown|safe }}{% endif %}
</section>
<section class="container mx-auto text-center">
  <script src="https://alphagiving.tfaforms.net/publish/10"
          data-qp-target-id=""
          defer></script>
</section>
<div id="donate-footer" class="hidden">{% include "partials/footer.njk" %}</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const moveFooterAfterForm = () => {
      const formWrapper = document.getElementById('FA__QP__BODYWRAPPERDIV');
      const footer = document.getElementById('donate-footer');
      if (formWrapper && footer) {
        formWrapper.parentNode.insertBefore(footer, formWrapper.nextSibling);
        footer.classList.remove('hidden');
      }
    };

    const checkInterval = setInterval(() => {
      if (document.getElementById('FA__QP__BODYWRAPPERDIV')) {
        moveFooterAfterForm();
        clearInterval(checkInterval);
      }
    }, 100);

    setTimeout(() => clearInterval(checkInterval), 10000);
  });
</script>
